<div>
  <div>
    <h1>
      List of all categorisations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new categorisation
    </h2>

    <form action="/insert_categorisation" method="post">
      <div>
        <label for="food_id_box">
          Food
        </label>

        <input type="text" id="food_id_box" name="query_food_id">
      </div>

      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_id">
      </div>

      <button>
        Create categorisation
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Food
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_categorisations.each do |a_categorisation| %>
      <tr>
        <td>
          <%= a_categorisation.id %>
        </td>

        <td>
          <%= a_categorisation.food_id %>
        </td>

        <td>
          <%= a_categorisation.category_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_categorisation.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_categorisation.updated_at) %> ago
        </td>

        <td>
          <a href="/categorisations/<%= a_categorisation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
