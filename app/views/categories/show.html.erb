<div>
  <div>
    <h1>
      Category: <%=@the_category.name%>
    </h1>

    <div>
      <div>
        <a href="/categories">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_category/<%= @the_category.id %>">
          Delete category
        </a>
      </div>
    </div>

    <dl>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_category.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_category.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit category
    </h2>

    <form action="/modify_category/<%= @the_category.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_category.name %>">
      </div>

      <button>
        Update category
      </button>
    </form>
  </div>
</div>

<hr>
<h2>
Foods
</h2>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
        </th>

        <th>
          Name
        </th>

        <th>
          Most Recent Rating
        </th>

        <th>
          Most Recent Description
        </th>

        <th>
        </th>
      </tr>

      <% @the_category.foods.each do |a_food| %>
        <% review = a_food.reviews.order({ :created_at => :desc }).at(0)%>
      <tr>

        <td>
          <img src="<%= a_food.image_url%>" alt="<%=a_food.name%>">
        </td>

        <td>
          <%= a_food.name %>
        </td>

        <td>
          <%= review.rating %>/10
        </td>
        <td>
          <%= review.description %>
        </td>

        <td>
          <a href="/foods/<%= a_food.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
