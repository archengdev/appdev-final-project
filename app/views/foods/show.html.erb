<div>
  <div>
    <h1>
      <%= @the_food.name%>
    </h1>

    <div>
      <div>
        <a href="/foods">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_food/<%= @the_food.id %>">
          Delete food
        </a>
      </div>
    </div>

    <dl>
      <img src=<%=@the_food.image_url%> alt=<%=@the_food.name%>>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food.updated_at) %> ago
      </dd>

      <% reviews = @the_food.reviews.order({ :updated_at => :desc })%>
      <% review = reviews[0]%>
      <% if review != nil %>
      <dt>
        Average rating
      </dt>
      <dd>
        <% sum = 0%>
        <% reviews.each do |rev| %>
        <% sum = sum + rev.rating.to_f%>
        <% end %>
        <%= sum/reviews.count %>/10
      </dd>
      <dt>
      Most recent description
      </dt>
      <dd>
      <%= review.description %>
      </dd>
      <%end%>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit food
    </h2>

    <form action="/modify_food/<%= @the_food.id %>"  method="post" >
      <div>
        <label for="image_url_box">
          Image url
        </label>

        <input type="text" id="image_url_box" name="query_image_url" value="<%= @the_food.image_url %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_food.name %>">
      </div>

      <button>
        Update food
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <h2>
      Add a new review
    </h2>

    <form action="/insert_review" method="post">
      <div>
        <label for="food_id_box">
          Food
        </label>

        <input type="text" id="food_id_box" name="query_food_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="query_rating">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <button>
        Create review
      </button>
    </form>
  </div>
</div>
<hr>
<h2>
Previous Reviews
</h2>
<% if reviews.count > 0 %>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Rating
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% reviews.each do |a_review| %>
        <% food = a_review.food%>
      <tr>

        <td>
          <%= a_review.rating %>/10
        </td>

        <td>
          <%= a_review.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_review.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_review.updated_at) %> ago
        </td>

        <td>
          <a href="/reviews/<%= a_review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% end %>
<hr>
